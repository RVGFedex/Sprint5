<p id="notice"><%= notice %></p>

<h2>Points Logs Summary</h2>

<table>
  <thead>
    <tr>
      <th class="desc" width="150">Circle</th>
      <th class="desc" width="150">Reward</th>
      <th class="desc" width="125">Event Type</th>
      <th class="desc" width="75">Debit</th>
      <th class="desc" width="75">Credit</th>
      <th class="desc" width="75">Balance</th>
	  <th colspan="3" width="165"></th>
    </tr>
  </thead>

  <tbody>
  
	<% if @points_logs.each.count == 0 %>
		<tr>
			<td class="desc" colspan=10>No Points Logs currently exist.</td>
		</tr>
	<% else %>
		<% @points_logs.each do |points_log| %>
			<tr>
				<td class="desc"><%= points_log.circle.name %></td>
				<td class="desc"><%= points_log.reward_takeup.reward.title %></td>
				<td class="desc"><%= points_log.event_type %></td>
				<td class="desc"><%= points_log.debit %> pts</td>
				<td class="desc"><%= points_log.credit %> pts</td>				
				<td class="desc"><%= points_log.balance %> pts</td>
				<td width="55"><%= link_to image_tag("icon_show.png"), points_log %></td>
				<td width="55"><%= link_to image_tag("icon_edit.png"), edit_points_log_path(points_log) %></td>
				<td width="55"><%= link_to link_to image_tag("icon_delete.png"), points_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Points log', new_points_log_path %>

