<p id="notice"><%= notice %></p>

<h2>Reward Takeups Summary</h2>

<table>
  <thead>
    <tr>
      <th class="desc" width="275">Reward</th>
      <th class="desc" width="275">User</th>
	  <th colspan="3" width="165"></th>
    </tr>
  </thead>

  <tbody>
  
	<% if @reward_takeups.each.count == 0 %>
		<tr>
			<td class="desc" colspan=10>No Reward Takeups currently exist.</td>
		</tr>
	<% else %>
		<% @reward_takeups.each do |reward_takeup| %>
			<tr>
				<td class="desc"><%= reward_takeup.reward.title %></td>
				<td class="desc"><%= reward_takeup.user.name %></td>				
				<td width="55"><%= link_to image_tag("icon_show.png"), reward_takeup %></td>
				<td width="55"><%= link_to image_tag("icon_edit.png"), edit_reward_takeup_path(reward_takeup) %></td>
				<td width="55"><%= link_to link_to image_tag("icon_delete.png"), reward_takeup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward takeup', new_reward_takeup_path %>

