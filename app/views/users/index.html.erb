<p id="notice"><%= notice %></p>

<h2>Listing Members</h2>

<table>
  <thead>
    <tr>
      <th class="desc" width="50">Id</th>
	  <th class="desc" width="250">Name</th>     
	  <th class="desc" width="250">Circle</th>
      <th colspan="3" width="165"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>	  
        <td class="desc"><%= user.name %></td>
        <td class="desc"><%= user.circle.name %></td>
        <td width="55"><%= link_to image_tag("icon_show.png"), user %></td>
        <td width="55"><%= link_to image_tag("icon_edit.png"), edit_user_path(user) %></td>
        <td width="55"><%= link_to image_tag("icon_delete.png"), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

