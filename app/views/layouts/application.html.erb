  <body>

<div id="pageFrame">

				<h1>Fedex Aviva Circles</h1>

			<div id="logon" align="left">
				<% if user_signed_in? %>
					<%= current_user.email %>
				<% else %>
					<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
				<% end %>
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, id: "flash_#{name}" %>
				<% end %>
			</div>


	<div id="navBar" class="row">
	  <div class="large-8 columns">
	    <!-- navigation -->
		<div id="navMenu" class="row">
			<% if user_signed_in? %>
			 <% if Role.find(current_user.role_id).name == 'Customer' %>
			  <div class="small-2 columns"><a href="/"><span>Home</span></a></div>
			<% else %>	  
			  <div class="small-2 columns"><a href="/"><span>Home</span></a></div>
			  <div class="small-2 columns"><a href="circles"><span>Circle</span></a></div>			  
			  <div class="small-2 columns"><a href="roles"><span>Roles</span></a></div>
			  <div class="small-2 columns end"><a href="products"><span>Products</span></a></div>			  						
			<% end %>
		   <% end %>									  
		</div>				  				  
	  </div>
	  <div id="points" class="large-4 columns">
		  <div class="row" align="right">				
		  <% if user_signed_in? %>
			<%= Circle.find(current_user.circle_id).name %> : <%= Circle.find(current_user.circle_id).points %> points
		  <% else %>
			Welcome
		  <% end %> </div>
	  </div>
	</div>
	
	

	<div id="pageBodyOuter">
		<div id="pageBodyInner">
			

		
			
			<!--<%= params.inspect %> <br/><br/>-->
			<!-- 
				<%= params.inspect %> <br/><br/>
